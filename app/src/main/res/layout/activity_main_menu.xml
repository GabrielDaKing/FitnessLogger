<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context="com.example.gncis.fitnesslogger.MainMenu">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="9">

        <TextView
            android:id="@+id/MainMenuTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Main Menu"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="25sp"
            tools:autoText="true" />

        <Button
            android:id="@+id/UserButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:background="@drawable/buttom_custom"
            android:text="User Information"
            android:scaleType="fitCenter"
            android:textSize="30dp" />

        <Button
            android:id="@+id/WorkoutButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="2"
            android:background="@drawable/buttom_custom"
            android:text="Workouts"
            android:textSize="30sp" />


        <Button
            android:id="@+id/ExcersizeButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:background="@drawable/buttom_custom"
            android:text="Exercises"
            android:textSize="30sp" />

        <Button
            android:id="@+id/IntervalTimer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="2"
            android:background="@drawable/buttom_custom"
            android:text="Interval Timer"
            android:textSize="30sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
